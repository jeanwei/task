<% provide(:blog, 'active') %>

<div class="row">
  <div class="col-xs-12">
    <header class="page-header">
      <h1>Edit Post
        <div class='pull-right'>
          <%= link_to blog_path(@blog), 'show', class: 'btn btn-primary' %>
          <%= link_to blogs_path, class: 'btn btn-default' do %>
              <i class='glyphicon glyphicon-home'></i>
          <% end %>
        </div>
      </h1>
    </header>
    <%= form_for(@blog, class: 'form-horizontal') do |f| %>
      <%= render partial: 'form', locals: { f: f, blog: @blog } %>
        <%= f.submit 'Update Post', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
