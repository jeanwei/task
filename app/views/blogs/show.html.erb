<% provide(:blog, 'active') %>
<div class="row">
  <div class="col-xs-12">
    <header class="page-header">
      <h1><%= @blog.title %>
        <div class='pull-right'>
          <% if logged_in? %>
            <%= link_to edit_blog_path(@blog), class: 'btn btn-default' do %>
                <i class='glyphicon glyphicon-edit'></i>
            <% end %>
            <%= link_to blog_path(@blog), method: :delete, class: 'btn btn-danger',
                        data: {confirm: "Delete #{ @blog.title }?"} do %>
                <i class='glyphicon glyphicon-trash'></i>
            <% end %>
            <%= link_to blogs_path, class: 'btn btn-default' do %>
                <i class='glyphicon glyphicon-home'></i>
            <% end %>
          <% end %>
        </div>
      </h1>
    </header>
    <%= simple_format @blog.body %>
  </div>
</div>
