<% provide(:blog, 'active') %>
<% @blogs.each do |blog| %>

      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <h2><%= link_to blog.title, blog_path(blog) %>
            <div class='pull-right'>
              <%= link_to edit_blog_path(blog), class: 'btn btn-default' do %>
                  <i class='glyphicon glyphicon-edit'></i>
              <% end %>
              <%= link_to blog_path(blog), method: :delete, class: 'btn btn-danger',
                          data: {confirm: "Delete #{blog.title}?"} do %>
                  <i class='glyphicon glyphicon-trash'></i>
              <% end %>
            </div>
          </h2>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <%= simple_format blog.body %>
        </div>
      </div>

<% end %>

