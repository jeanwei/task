<%= form_for(Contact.new, url: contact_me_path, html: { id: 'contactForm',
                                                        class: 'form-horizontal',
                                                        'data-toggle' => 'validator' }) do |f| %>
    <div class="form-group has-feedback">
      <%= f.label :name, class: 'control-label col-sm-3 white-font' %>
      <div class="col-sm-8">
        <%= f.text_field :name,
                         placeholder: 'Your Name here',
                         required: true,
                         class: 'form-control' %>
        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
        <div class="help-block with-errors"></div>
      </div>
    </div>
    <div class="form-group has-feedback">
      <%= f.label :email, class: 'control-label col-sm-3 white-font' %>
      <div class="col-sm-8">
        <%= f.email_field :email,
                          placeholder: 'Your email here',
                          required: true,
                          class: 'form-control' %>
        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
        <div class="help-block with-errors"></div>
      </div>
    </div>
    <div class="form-group has-feedback">
      <%= f.label :message, class: 'control-label col-sm-3 white-font' %>
      <div class="col-sm-8">
        <%= f.text_area :message, required: true, class: 'form-control', rows: '10' %>
        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
        <div class="help-block with-errors"></div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-8">
        <%= f.submit 'Email Tong Wei', class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>
